<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdd00"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/wifi"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/wifi_button" />

    <TextView
        android:id="@+id/Bro_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Bro&apos;s Wi-Fi!"
        android:textSize="45dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/warning_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Bro_messages"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Add Customized Wifi conditions,\nSo that We done put you in trouble!"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/add_message"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/Bro_messages"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/warning_text"
        android:background="@drawable/black_plus" />

    <ListView
        android:id="@+id/default_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linear2"
        android:layout_below="@id/add_message"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/customshape" >
    </ListView>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/back"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/backbutton" />

        <Button
            android:id="@+id/next"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/nextbuttton" />
    </LinearLayout>

</RelativeLayout>